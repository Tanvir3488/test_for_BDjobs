<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/card_color"
        android:descendantFocusability="blocksDescendants"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="20"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="16"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/jobtitle"
                        android:textSize="@dimen/Job_title_text_size"
                        android:text="XYZ - Handicrafts"
                        android:textColor="@color/jobtitle_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/companyName"
                        android:text="XYZ Ltd."
                        android:textSize="@dimen/Company_text_size"
                        android:textColor="@color/Company_name_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

                <ImageView
                    android:id="@+id/logo"
                    android:layout_margin="2dp"
                    android:layout_width="20dp"
                    android:layout_weight="4"
                    android:src="@drawable/ic_launcher_round"
                    android:layout_height="50dp"
                    android:layout_marginLeft="0dp"
                    android:scaleType="fitCenter"
                    />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="20"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="10"
                android:orientation="vertical"
                android:weightSum="20"
                android:layout_height="wrap_content">
                <TextView
                    android:drawableLeft="@drawable/calenderx"
                    android:layout_width="wrap_content"
                    android:text="@string/deadline"
                    android:textColor="@color/title_color"
                    android:drawablePadding="5dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/deadline"
                    android:layout_width="wrap_content"
                    android:text="12th dec 2020"
                    android:textColor="@color/Company_name_color"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/text_margin_left"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="10"
                android:orientation="vertical"
                android:weightSum="20"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/title_color"
                    android:drawableLeft="@drawable/experincex"
                    android:layout_width="wrap_content"
                    android:text="@string/experince"
                    android:drawablePadding="5dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/exparince"
                    android:layout_width="wrap_content"
                    android:textColor="@color/Company_name_color"
                    android:text="12th dec 2020"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/text_margin_left"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="10"
                android:layout_marginTop="@dimen/text_margin_Top"
                android:orientation="vertical"
                android:weightSum="20"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="wrap_content"
                    android:text="@string/salary"
                    android:textColor="@color/title_color"
                    android:layout_marginLeft="@dimen/text_margin_left_for_salary"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/salary"
                    android:layout_width="wrap_content"
                    android:text="12th dec 2020"
                    android:textColor="@color/Company_name_color"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/text_margin_left"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <TextView
                android:id="@+id/tap"
                android:text="@string/tap"
                android:singleLine="true"
                android:ellipsize="middle"
                android:textColor="@color/blue"
                android:layout_margin="2dp"
                android:textSize="@dimen/Company_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>





        </LinearLayout>




    </androidx.cardview.widget.CardView>
</layout>